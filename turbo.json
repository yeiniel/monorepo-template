{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "package.json"
  ],
  "pipeline": {
    "build": {
        "dependsOn": ["^build"],
        "inputs": ["src/**"],
        "outputs": ["dist/**", ".serverless/**"]
    },
    "lint": {
        "inputs": ["src/**"]
    },
    "test": {
        "outputs": ["coverage/**"],
        "dependsOn": ["build"],
        "inputs": ["src/**", "test/**"],
        "outputMode": "full"
    },
    "deploy": {
        "dependsOn": ["build"],
        "cache": false
    }
  }
}
